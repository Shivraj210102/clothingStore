<form action="/admin/update_testimonials/<%=data.testimonials_id%>" method="post">
    <div class="container bg-white p-4 border shadow-lg">
    <div class="row">
       <div class="col-md-12 text-center">
        <h3>Update Testimonials  Details</h3>
        <hr>
       </div>
       <div class="mt-3 col-md-12">
         Testimonials Name
        <input type="text" name="testimonials_name" value="<%=data.testimonials_name%>" class="form-control"/>
       </div>
       <div class="mt-3 col-md-12">
         Testimonials Details
        <textarea name="testimonials_details"  class="form-control"><%=data.testimonials_details%></textarea>
       </div>
    <div class="col-md-12 text-center mt-3">
     <button  class="btn btn-primary">Update Slider</button>
    </div>

</div>
</form> 
