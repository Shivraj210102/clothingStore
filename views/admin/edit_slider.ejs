<%- include('navbar.ejs') %>
<form action="/admin/update_slider/<%=data.slider_id%>" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-4 border shadow-lg">
    <div class="row">
       <div class="col-md-12 text-center">
        <h3>Update Slider  Details</h3>
        <hr>
       </div>
       <div class="mt-3 col-md-12">
         Slider title
        <input type="text" name="slider_title" value="<%=data.slider_title%>" class="form-control"/>
       </div>
       <div class="mt-3 col-md-12">
         Slider Details
        <textarea name="slider_details"  class="form-control"><%=data.slider_details%></textarea>
       </div>
       <div class="mt-3 col-md-6">
        Button Link
        <input type="url" name="button_link" value="<%=data.button_link%>" class="form-control"/>
       </div>
       <div class="mt-3 col-md-6">
        Button Text
        <input type="text" name="button_text" value="<%=data.button_text%>" class="form-control"/>
       </div>
       <div class="mt-3 col-md-6">
        Slider Image
        <input type="file" name="slider_image" class="form-control"/>
       </div>
       <div class="mt-3 col-md-6">
        Slider Image
        <img src="/uploads/<%=data.slider_image%>" class=" img-thumbnail" alt="">
       </div>
    </div>
    <div class="col-md-12 text-center mt-3">
     <button  class="btn btn-primary">Update Slider</button>
    </div>

</div>
</form> 
<%- include('footer.ejs') %>
