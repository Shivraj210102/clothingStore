
<%- include('navbar.ejs') %>

<form action="/admin/save_category" method="post">
    <div class="container-flude bg-white p-4">
        <div class="row">
            <div class="col-md-12 mb-4 text-center">
                <h3>※ Category ※</h3><hr>
            </div>
            
            <div class="mb-3 col-md-12">
                <label>Category Name</label>
                <input type="text" name="category_name" class="form-control">
            </div>
            <div class="mb-3 col-md-12 text-center">
                <button class="btn btn-info">Save Details</button>
            </div>
        </div>
    </div>
</form>

<div class="container-fluid bg-white p-3 shadow-lg mt-5">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-light table-hover table-bordered caption-top">
                <tr class="text-center">
                    <th>SN</th>
                    <th>Category Name</th>
                    <th>Status</th>
                </tr>
                <% for(var i=0; i<category.length; i++){ %>
                    <tr class="text-center">
                        <td><%=i+1%></td>
                        <td><%=category[i].category_name%></td>
                        <td style="white-space: nowrap;max-width: 15px;">
                            <a href="/admin/edit_category/<%=category[i].category_id%>"><button class="btn btn-outline-success"><i class="fa fa-edit"></i></button></a>

                            <a href="/admin/delete_category/<%=category[i].category_id%>"><button class="btn btn-outline-danger"><i class="fa fa-trash"></i></button></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>
<%- include('footer.ejs') %>
