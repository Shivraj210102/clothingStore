
<%- include('navbar.ejs') %>

<form action="/admin/save_company_details" method="post" enctype="multipart/form-data">
    <div class="container-flude bg-white p-4">
        <div class="row">
            <div class="col-md-12 mb-4 text-center">
                <h3>About Company</h3><hr>
            </div>
            
            <div class="mb-3 col-md-3">
                <label>Company Name</label>
                <input type="text" name="company_name" value="<%=company_info.company_name%>" class="form-control">
            </div>
            <div class="mb-3 col-md-6">
                <label>Company Image</label>
                <input type="file" name="company_image" class="form-control">
            </div>
            <div class="mb-3 col-md-3">
                <strong>Comapny Image :</strong> <br>
                <img src="/uploads/<%=company_info.company_image%>" class="img-thumbnail" alt="Company Image">
            </div>
            <div class="mb-3 col-md-3">
                <label>Company Mobile</label>
                <input type="number" value="<%=company_info.company_mobile%>" name="company_mobile" class="form-control">
            </div>
            <div class="mb-3 col-md-3">
                <label>Company Email</label>
                <input type="email" value="<%=company_info.company_email%>" name="company_email" class="form-control">
            </div>
            <div class="mb-3 col-md-12">
                <label>Company Address</label>
                <textarea name="company_address" class="form-control"> <%=company_info.company_address%> </textarea>
            </div>
            <div class="mb-3 col-md-4">
                <label>Instagram link</label>
                <input type="url" value="<%=company_info.instagram_link%>" name="instagram_link" class="form-control">
            </div>
            <div class="mb-3 col-md-4">
                <label>Telegram link</label>
                <input type="url" value="<%=company_info.telegram_link%>" name="telegram_link" class="form-control">
            </div>
            <div class="mb-3 col-md-4">
                <label>Twitter link</label>
                <input type="url" value="<%=company_info.twitter_link%>" name="twitter_link" class="form-control">
            </div>
            <div class="mb-3 col-md-4">
                <label>Youtube link</label>
                <input type="url" value="<%=company_info.youtube_link%>" name="youtube_link" class="form-control">
            </div>
            <div class="mb-3 col-md-4">
                <label>WhatsApp No</label>
                <input type="number" value="<%=company_info.whatsapp_no%>" name="whatsapp_no" class="form-control">
            </div>
            <div class="mb-3 col-md-12 text-center">
                <button class="btn btn-info">Save Details</button>
            </div>
        </div>
    </div>
</form>
<%- include('footer.ejs') %>
