<%- include('navbar.ejs') %>
<div class="container_fluid bg-white p-3 shadow-lg">
   <form action="/admin/save_service" method="post">
      <div class="row">
         <div class="col-md-12 text-center">
            <h3>※ Service  Details ※</h3>
            <hr>
         </div> 
         <div class="mt-3 col-md-6">
            <select class="form-select" name="service_font" aria-label="Default select example">
               <option selected>Open this select menu</option>
               <option value="icon icon-truck">Truck 🚚</option>
               <option value="icon icon-return">return 🔁</option>
               <option value="icon icon-tags1">tag 💅</option>
               <option value="icon icon-help_outline">help_outline ❓</option>
             </select>
         </div>
         <div class="mt-3 col-md-6">
            <input type="text" name="service_title" class="form-control">
         </div>
         <div class="col-md-12 mt-3">
            <textarea name="service_details" class="form-control"></textarea>
         </div>   
                
         <div class="mt-5 col-md-12 text-center">
            <button class="btn btn-md btn-outline-info" >Save Details</button>
         </div>
      </div>
   </form>
</div>

<div class="container-fluid bg-white p-3 shadow-lg mt-5">
   <div class="row">
       <div class="col-md-12">
           <table class="table table-light table-hover table-bordered">
               <tr class="text-center">
                   <th>Status</th>
                   <th>SN</th>
                   <th>Service Font</th>
                   <th>Service Title</th>
                   <th>Service Details</th>                   
               </tr>
               
               <% for(var i=0; i<service.length; i++){ %>
                   <tr class="text-center">
                       <td style="white-space: nowrap;">
                           <a href="/admin/edit_service/<%=service[i].service_id%>"><button class="btn btn-outline-success"><i class="fa fa-edit"></i></button></a>

                           <a href="/admin/delete_service/<%=service[i].service_id%>"><button class="btn btn-outline-danger"><i class="fa fa-trash"></i></button></a>
                       </td>
                       <td><%=i+1%></td>
                       <td><%=service[i].service_font%></td>
                       <td><%=service[i].service_title%></td>
                       <td><%=service[i].service_details%></td>
                   </tr>
               <% } %>
           </table>
       </div>
   </div>
</div>
<%- include('footer.ejs') %>
