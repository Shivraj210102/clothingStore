<%- include('navbar.ejs') %>
<form action="/admin/update_blog/<%=data.blog_id%>" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-4 border shadow-lg">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Update blog  Details</h3>
                <hr>
            </div>
            <div class="mt-3 col-md-12">
                    Blog Heading
                    <input type="text" name="blog_heading" value="<%=data.blog_heading%>" class="form-control"/>
            </div>
            <div class="mt-3 col-md-12">
                    Blog Details
                    <textarea name="blog_details" id="editor" class="form-control"><%=data.blog_details%></textarea>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="mt-3 col-md-6">
                        Blog Image
                        <input type="file" name="blog_image" class="form-control"/>
                        <img src="/uploads/<%=data.blog_image%>" class=" img-thumbnail mt-3" alt="">
                    </div>
                </div>
        </div>
            <div class="col-md-12 text-center mt-3">
                <button  class="btn btn-primary">Update Blog</button>
            </div>
    </div>
</form> 
